<h1>Listado de tweets</h1>

<%= form_for(@tweet, :url => "user") do |f| %>
 
  <div class="field">
    <%= f.label :Usuario %><br />
    <%= f.text_field :user %>
  </div>
  <div class="actions">
    <%= f.submit "Buscar" %>
  </div>
<% end %>

<%= form_for(@tweet, :url => "read_text") do |f| %>
 
  <div class="field">
    <%= f.label :Estado %><br />
    <%= f.text_field :status %>
  </div>
  <div class="actions">
    <%= f.submit "Buscar Estado" %>
  </div>
<% end %>

<%= form_for(@tweet, :url => "update") do |f| %>
 
  <div class="field">
    <%= f.label :Mensaje %><br />
    <%= f.text_field :message %>
  </div>
  <div class="actions">
    <%= f.submit "Enviar Mensaje" %>
  </div>
<% end %>


<br />

<%= link_to 'Nuevo Tweet', new_tweet_path %>
